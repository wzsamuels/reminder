// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  subscriptions Subscription[]
  incomes       Income[]
}

model Subscription {
  id           String      @id @default(cuid())
  userId       String
  name         String
  price        Float
  currency     String      @default("USD")
  frequency    String // "MONTHLY", "YEARLY"
  startDate    DateTime
  nextRenewal  DateTime
  reminderDays Int         @default(3) // Days before renewal to remind
  sendEmail    Boolean     @default(true)
  type         ExpenseType @default(SUBSCRIPTION)
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ExpenseType {
  SUBSCRIPTION
  BILL
  YEARLY_EXPENSE
}

model Income {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  source    String
  frequency String   @default("MONTHLY") // "MONTHLY", "YEARLY"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
